<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ASTON4" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="customClockStyle">@style/CustomClockDefaultStyle</item>

    </style>

    <style name="CustomClockDefaultStyle">
        <item name="secondHandColor">#008800</item>
        <item name="minuteHandColor">#880000</item>
        <item name="hourHandColor">#03A9F4</item>
    </style>

    <style name="CustomClockAstonStyle" parent="CustomClockDefaultStyle">
        <item name="hourHandColor">#0000ff</item>
    </style>

</resources>
