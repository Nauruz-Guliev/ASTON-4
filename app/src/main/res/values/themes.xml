<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ASTON4" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="customClockStyle">@style/CustomClockDefaultStyle</item>

    </style>

    <style name="CustomClockDefaultStyle">
        <item name="second_hand_color">@color/blue</item>
        <item name="minute_hand_color">@color/red</item>
        <item name="hour_hand_color">@color/black</item>
        <item name="clock_color">@color/black</item>
    </style>


</resources>
